<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:include schemaLocation="fileList.xsd"/> 
  <xs:include schemaLocation="executor.xsd"/>
  <xs:include schemaLocation="host.xsd"/>
  <xs:include schemaLocation="commandLine.xsd"/>

  <xs:complexType name="opClass">
    <xs:choice>
      <xs:element name="commandLine" type="commandLine"/>
      <xs:element name="docker" type="docker"/>
      <xs:element name="singularity" type="singularity"/>
      <xs:element name="cwlCommandLineTool" type="cwlCommandLineTool"/>
      <xs:element name="cwlWorkflow" type="cwlWorkflow"/>
    </xs:choice>
  </xs:complexType>

  <xs:complexType name="docker">
    <xs:sequence>
      <xs:element name="version" type="xs:string"/>
      <xs:element name="wrappedCommand" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="singularity">
    <xs:sequence>
      <xs:element name="version" type="xs:string"/>
      <xs:element name="wrappedCommand" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="cwlCommandLineTool">
    <xs:sequence>
      <xs:element name="version" type="xs:string"/>
      <xs:element name="wrappedCommand" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="cwlWorkflow">
    <xs:sequence>
      <xs:element name="version" type="xs:string"/>
      <xs:element name="wrappedCommand" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="operation">
    <xs:sequence>
      <xs:element name="inputFiles"     type="fileList" minOccurs="0"/>
      <xs:element name="targetFiles"    type="fileList"/>
      <xs:element name="startTime"      type="xs:dateTime"/>
      <xs:element name="endTime"        type="xs:dateTime"/> 
      <xs:element name="executor"       type="executor"/>
      <xs:element name="host"           type="host"/>
      <xs:element name="opClass"        type="opClass"/>
      <xs:element name="message"        type="xs:string" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>
</xs:schema>
