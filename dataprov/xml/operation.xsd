<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:include schemaLocation="dataObjectList.xsd"/>
  <xs:include schemaLocation="executor.xsd"/>
  <xs:include schemaLocation="host.xsd"/>
  <xs:include schemaLocation="commandLine.xsd"/>
  <xs:include schemaLocation="docker.xsd"/>
  <xs:include schemaLocation="singularity.xsd"/>
  <xs:include schemaLocation="cwl/cwltool.xsd"/>
  <xs:include schemaLocation="snakemake.xsd"/>

  <xs:complexType name="opClass">
    <xs:choice>
      <xs:element name="commandLine" type="commandLine"/>
      <xs:element name="docker" type="docker"/>
      <xs:element name="singularity" type="singularity"/>
      <xs:element name="cwltool" type="cwltool"/>
      <xs:element name="snakemake" type="snakemake"/>
    </xs:choice>
  </xs:complexType>

  <xs:complexType name="operation">
    <xs:sequence>
      <xs:element name="inputDataObjects"  type="dataObjectList" minOccurs="0"/>
      <xs:element name="targetDataObjects" type="dataObjectList"/>
      <xs:element name="startTime"         type="xs:dateTime"/>
      <xs:element name="endTime"           type="xs:dateTime"/> 
      <xs:element name="executor"          type="executor"/>
      <xs:element name="host"              type="host"/>
      <xs:element name="opClass"           type="opClass"/>
      <xs:element name="message"           type="xs:string" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>
</xs:schema>
