
  <xs:simpleType name="operationClass">
    <xs:restriction base="xs:string">
      <xs:enumeration value="CommandLine"/>
      <xs:enumeration value="Docker"/>
      <xs:enumeration value="Singularity"/>
      <xs:enumeration value="CWLCommandLineTool"/>
      <xs:enumeration value="CWLWorkflow"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="file">
    <xs:sequence>
      <xs:element name="name" type="xs:string"/>
      <xs:element name="uri"  type="xs:anyURI"/>
      <xs:element name="sha1" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="fileList">
    <xs:sequence>
      <xs:element name="file" type="file" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:include schemaLocation="executor.xsd"/>
  <xs:include schemaLocation="host.xsd"/>

  <xs:complexType name="operation">
    <xs:sequence>
      <xs:element name="inputFiles"     type="fileList"/>
      <xs:element name="targetFiles"    type="fileList"/>
      <xs:element name="startTime"      type="xs:dateTime"/>
      <xs:element name="endTime"        type="xs:dateTime"/> 
      <xs:element name="executor"       type="executor"/>
      <xs:element name="host"           type="host"/>
      <xs:element name="opClass"        type="operationClass"/>
      <xs:element name="wrappedCommand" type="xs:string" />
      <xs:element name="message"        type="xs:string" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="dataprov">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="target"  type="file"/>
        <xs:element name="history">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="op" type="operation" maxOccurs="unbounded"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>
